//information form
section.container-fluid.inforFormWrapper
    img.inforFormWrapperImages(src="https://statics.vinpearl.com/thap-ba-ponagar-nha-trang-2_1625539466.jpg", alt="")
    .inforFormContent.container-wrap
        .inforFormContentItem
            .overlay
            img.infoFormBanner(src="https://statics.vinpearl.com/thap-ba-ponagar-nha-trang-2_1625539466.jpg", alt="")
        .inforFormContentItem
            .inforFormTitleWrap
                h4 Đăng Ký
                h1.inforFormTitle Thông Tin Thí Sinh
            form.formInfo(action='' method='post' autocomplete='off')
                .formItemWrap
                    .formItem 
                        label.formItemName(for='fullName')
                            | Họ và tên
                        input#fullName(type='text' name='fullName' placeholder=' Nhập họ tên...').formItemInput
                        span.formMessage
                    .formItem 
                        label.formItemName(for='birthday')
                            | Ngày sinh
                        .inputGroupItem
                            .iconItem
                            input.formItemInput.checkInModalBookRoom#birthday(type='text' readonly='true' placeholder='Chọn ngày')
                        span.formMessage
                .formItemWrap
                    .formItem 
                        label.formItemName(for='school')
                            | Trường
                        input#school(type='text' name='school' placeholder=' Nhập tên trường...').formItemInput
                        span.formMessage
                    .formItem 
                        label.formItemName(for='class')
                            | Lớp
                        input#class(type='text' name='class' placeholder=' Nhập lớp...').formItemInput
                        span.formMessage
                .formItem 
                    label.formItemName(for='address')
                        | Địa chỉ
                    input#address(type='text' name='address' placeholder=' Nhập địa chỉ...').formItemInput
                    span.formMessage
                .decurityCodeWrap
                    img.imageSecurityCode(src='images/introduction/capcha.jpg' alt='')
                    a.buttonRefresh(href='javascript:void(0);')
                        img.iconRefresh(src='images/icon/icon-refresh.png' alt='')
                button.button.buttonPrimary1.btnSubmit
                    | Đăng Ký 

